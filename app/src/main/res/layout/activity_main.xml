<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/primary_dark_material_dark"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

android:orientation="vertical">

<TextView
    android:layout_marginTop="20dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/textView"
    android:background="@android:color/holo_blue_light"
    android:gravity="center|end"

    android:textSize="27sp" />

<TableLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="320dp"

    android:background="@color/bright_foreground_disabled_material_light"
    android:id="@+id/tlayout">


    <TableRow android:gravity="center" android:layout_marginTop="25dp"
        android:layout_width="fill_parent"
        android:layout_height="700dp"
        android:layout_marginBottom="1dp"



        >

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="7"
            android:onClick="agreganumero"
            android:background="@drawable/button_pressed"

            android:id="@+id/button7" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="8"
            android:onClick="agreganumero"
            android:background="@drawable/button_pressed"
            android:id="@+id/button8" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="9"
            android:onClick="agreganumero"
            android:background="@drawable/button_pressed"
            android:id="@+id/button9" />

        <Button
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:textSize="25sp"
            android:text="DEL"
            android:onClick="reset"
            android:background="@drawable/button_pressed"
            android:id="@+id/buttondel" />
    </TableRow>
    <TableRow android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="700dp"
        android:layout_margin="1dp"
        >

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="4"
            android:onClick="agreganumero"
            android:background="@drawable/button_pressed"
            android:id="@+id/button4" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="5"
            android:onClick="agreganumero"
            android:background="@drawable/button_pressed"
            android:id="@+id/button5" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="6"
            android:onClick="agreganumero"
            android:background="@drawable/button_pressed"
            android:id="@+id/button6" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="+"
            android:onClick="suma"
            android:background="@drawable/button_pressed"
            android:id="@+id/buttonmas" />
    </TableRow>
    <TableRow android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="700dp"
        android:layout_margin="1dp"
        >

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="1"
            android:onClick="agreganumero"
            android:background="@drawable/button_pressed"
            android:id="@+id/button1" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="2"
            android:onClick="agreganumero"
            android:background="@drawable/button_pressed"
            android:id="@+id/button2" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="3"
            android:onClick="agreganumero"
            android:background="@drawable/button_pressed"
            android:id="@+id/button3" />
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:onClick="restar"
            android:background="@drawable/button_pressed"
            android:text="-"
            android:id="@+id/buttonmenos" />
    </TableRow>
    <TableRow android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="700dp"
        android:layout_margin="1dp"
        >

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="*"
            android:onClick="multiplicar"
            android:background="@drawable/button_pressed"
            android:id="@+id/button" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="0"
            android:onClick="agreganumero"
            android:background="@drawable/button_pressed"
            android:id="@+id/button0" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="/"
            android:onClick="dividir"
            android:background="@drawable/button_pressed"
            android:id="@+id/buttonN" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="="
            android:onClick="igual"
            android:background="@drawable/button_pressed"
            android:id="@+id/buttonigual" />
    </TableRow>
</TableLayout>
</LinearLayout>
